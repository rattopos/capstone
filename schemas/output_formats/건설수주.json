{
  "_comment": "건설수주 출력 형식 스키마",
  
  "template_type": "construction",
  "sheet_name": "건설 (공표자료)",
  "display_name": "건설수주",
  "template_file": "건설수주.html",
  
  "data_type": {
    "unit": "%",
    "direction_positive": "increase",
    "direction_negative": "decrease",
    "category_name": "공종"
  },
  
  "sentence_patterns": {
    "diamond_summary": {
      "pattern": "건설수주는 {bottom_regions_with_categories} 등 {count}개 시도에서 전년동분기대비 {direction}",
      "count_condition": "negative",
      "description": "감소한 시도 수를 카운트"
    },
    "square_national": {
      "pattern": "{year}년 {quarter}분기 전국 건설수주는 {categories} 등의 수주가 {production_change} 전년동분기대비 {rate} {direction}",
      "description": "전국 데이터 요약"
    },
    "circle_regions": {
      "pattern_increase": "{top_region1}({top_rate1}), {top_region2}({top_rate2}), {top_region3}({top_rate3})은 {top_categories} 등의 수주가 늘어 증가하였으며,",
      "pattern_decrease": "{bottom_region1}({bottom_rate1}), {bottom_region2}({bottom_rate2}), {bottom_region3}({bottom_rate3})는 {bottom_categories} 등의 수주가 줄어 감소",
      "description": "상위/하위 시도 요약"
    }
  },
  
  "detail_section": {
    "title": "< 주요 증감지역 및 공종 >",
    "format": {
      "national": "{region}( {rate}): {category1}({rate1}), {category2}({rate2}), {category3}({rate3})",
      "top_region_special": "{region}( {rate}): 토목( {civil_rate}) ⇒ {civil_details} / 건축( {building_rate}) ⇒ {building_details}",
      "bottom_region_special": "{region}( {rate}): 토목( {civil_rate}) ⇒ {civil_details} / 건축( {building_rate}) ⇒ {building_details}"
    },
    "special_format": true
  },
  
  "table": {
    "title": "《 건설수주 증감률(경상) 》",
    "unit_text": "[전년동분기비, %]",
    "columns": 8,
    "source": "자료: 통계청 국가통계포털(KOSIS), 건설경기동향조사"
  },
  
  "region_category_selection": {
    "top_regions": {
      "count": 3,
      "sort_by": "growth_rate",
      "sort_order": "descending",
      "category_filter": "positive"
    },
    "bottom_regions": {
      "count": 3,
      "sort_by": "growth_rate",
      "sort_order": "ascending",
      "category_filter": "negative"
    },
    "national_categories": {
      "count": 3,
      "sort_by": "absolute_growth_rate",
      "sort_order": "descending"
    }
  }
}

