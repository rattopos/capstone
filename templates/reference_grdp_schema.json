{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "참고 GRDP 보도자료 스키마",
  "description": "2025년 2/4분기 실질 지역내총생산(GRDP) 참고 페이지",
  "type": "object",
  "properties": {
    "report_info": {
      "type": "object",
      "properties": {
        "year": { "type": "integer", "description": "연도" },
        "quarter": { "type": "integer", "description": "분기 (1-4)" },
        "page_number": { "type": "integer", "description": "페이지 번호" }
      },
      "required": ["year", "quarter"]
    },
    "national_summary": {
      "type": "object",
      "description": "전국 GRDP 요약",
      "properties": {
        "growth_rate": { "type": "number", "description": "전국 GRDP 성장률 (%)" },
        "direction": { "type": "string", "enum": ["증가", "감소"], "description": "증감 방향" },
        "contributions": {
          "type": "object",
          "description": "산업별 기여도 (%p)",
          "properties": {
            "service": { "type": "number", "description": "서비스업 기여도" },
            "manufacturing": { "type": "number", "description": "광·제조업 기여도" },
            "other": { "type": "number", "description": "기타 기여도" },
            "construction": { "type": "number", "description": "건설업 기여도" }
          }
        },
        "placeholder": { "type": "boolean", "description": "결측치 여부" }
      }
    },
    "top_region": {
      "type": "object",
      "description": "성장률 1위 시도 정보",
      "properties": {
        "name": { "type": "string", "description": "지역명" },
        "growth_rate": { "type": "number", "description": "성장률 (%)" },
        "contributions": {
          "type": "object",
          "description": "산업별 기여도 (%p)",
          "properties": {
            "manufacturing": { "type": "number", "description": "광·제조업 기여도" },
            "service": { "type": "number", "description": "서비스업 기여도" },
            "other": { "type": "number", "description": "기타 기여도" },
            "construction": { "type": "number", "description": "건설업 기여도" }
          }
        },
        "placeholder": { "type": "boolean", "description": "결측치 여부" }
      }
    },
    "regional_data": {
      "type": "array",
      "description": "시도별 데이터",
      "items": {
        "type": "object",
        "properties": {
          "region_group": { "type": "string", "description": "권역 (경인, 충청, 호남, 동북, 동남)" },
          "region": { "type": "string", "description": "시도명" },
          "growth_rate": { "type": "number", "description": "성장률 (%)" },
          "manufacturing": { "type": "number", "description": "광업·제조업 기여도 (%p)" },
          "construction": { "type": "number", "description": "건설업 기여도 (%p)" },
          "service": { "type": "number", "description": "서비스업 기여도 (%p)" },
          "other": { "type": "number", "description": "기타 기여도 (%p)" },
          "placeholder": { "type": "boolean", "description": "결측치 여부" }
        },
        "required": ["region", "growth_rate", "manufacturing", "construction", "service", "other"]
      }
    },
    "chart_config": {
      "type": "object",
      "description": "차트 설정",
      "properties": {
        "y_axis": {
          "type": "object",
          "properties": {
            "min": { "type": "number", "default": -6 },
            "max": { "type": "number", "default": 8 },
            "step": { "type": "number", "default": 2 }
          }
        }
      }
    }
  },
  "required": ["report_info", "regional_data"],
  
  "definitions": {
    "region_order": {
      "description": "시도 순서 및 권역 그룹핑",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "group": { "type": "string" },
          "regions": { "type": "array", "items": { "type": "string" } }
        }
      },
      "default": [
        { "group": "전국", "regions": ["전국"] },
        { "group": "경인", "regions": ["서울", "인천", "경기"] },
        { "group": "충청", "regions": ["대전", "세종", "충북", "충남"] },
        { "group": "호남", "regions": ["광주", "전북", "전남", "제주"] },
        { "group": "동북", "regions": ["대구", "경북", "강원"] },
        { "group": "동남", "regions": ["부산", "울산", "경남"] }
      ]
    }
  }
}

