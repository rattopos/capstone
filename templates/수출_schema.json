{
  "title": "수출 분석 보고서 스키마",
  "description": "G 분석 및 G 참고 시트 데이터를 기반으로 수출 보고서를 생성하기 위한 스키마",
  "version": "1.0",
  
  "data_sources": {
    "analysis_sheet": "G 분석",
    "reference_sheet": "G 참고",
    "summary_sheet": "G(수출)집계"
  },
  
  "sido_order": [
    "전국", "서울", "부산", "대구", "인천", "광주", "대전", "울산", "세종",
    "경기", "강원", "충북", "충남", "전북", "전남", "경북", "경남", "제주"
  ],
  
  "region_groups": {
    "경인": ["서울", "인천", "경기"],
    "충청": ["대전", "세종", "충북", "충남"],
    "호남": ["광주", "전북", "전남", "제주"],
    "동북": ["대구", "경북", "강원"],
    "동남": ["부산", "울산", "경남"]
  },
  
  "report_structure": {
    "main_section_number": "4",
    "main_section_title": "수출입 동향",
    "section_number": "가",
    "section_title": "수출",
    "page_number": "- 10 -",
    
    "summary_box": {
      "template": "◆수출은 {regions} 등 {count}개 시도에서 전년동분기대비 {direction}",
      "direction_increase": "증가",
      "direction_decrease": "감소"
    },
    
    "nationwide_summary": {
      "template": "전국 수출({amount}억달러)은 {products} 등의 수출이 늘어 전년동분기대비 {change}% {direction}"
    },
    
    "regional_summary": {
      "decrease_template": "{regions}은 {products} 등의 수출이 줄어 감소하였으나,",
      "increase_template": "{regions}은 {products} 등의 수출이 늘어 {direction}"
    }
  },
  
  "table_structure": {
    "title": "《 수출액 및 증감률 》",
    "headers": {
      "change_section": "전년동분기대비 증감률(%)",
      "amount_section": "수출액(억달러)"
    },
    "periods": ["2023.2/4", "2024.2/4", "2025.1/4", "2025.2/4<sup>p</sup>"],
    "amount_periods": ["2024.2/4", "2025.2/4<sup>p</sup>"]
  },
  
  "footnotes": {
    "note": "1) 수출신고서 상 제조자의 사업장 소재지 기준",
    "source": "자료: 관세청 한국무역통계서비스"
  },
  
  "output_schema": {
    "report_info": {
      "main_section_number": "string",
      "main_section_title": "string",
      "section_number": "string",
      "section_title": "string",
      "page_number": "string"
    },
    "nationwide_data": {
      "amount": "number",
      "change": "number",
      "products": []
    },
    "regional_data": {
      "increase_regions": [],
      "decrease_regions": []
    },
    "summary_table": {
      "rows": []
    }
  },
  
  "generation_rules": {
    "top_products_count": 3,
    "top_regions_count": 3,
    "decimal_places": 1
  },
  
  "product_name_mapping": {
    "프로세스와 컨트롤러": "프로세서·컨트롤러",
    "수송 기타장비 ": "수송 기타장비",
    "수송 기타장비": "수송 기타장비",
    "철강 봉 및 형강": "철강 봉 및 형강",
    "유선통신기기": "유선통신기기",
    "인쇄회로": "인쇄회로",
    "기타 유기·무기화합물": "기타 유기·무기화합물",
    "경유": "경유"
  }
}

