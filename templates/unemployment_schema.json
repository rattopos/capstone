  "version": "1.0",
  
  "data_sources": {
    "analysis_sheet": "D(실업)분석",
    "summary_sheet": "D(실업)집계"
  },
  
  "column_mapping": {
    "summary_sheet": {
      "sido": 0,
      "age_group": 1,
      "rate_2023_24": 11,
      "rate_2024_24": 15,
      "rate_2025_14": 18,
      "rate_2025_24": 19
    },
    "analysis_sheet": {
      "sido": 0,
      "age_group": 1,
      "change_2023_24": 6,
